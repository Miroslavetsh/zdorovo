{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "next",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "ban-ts-ignore": "off",
    "import/no-anonymous-default-export": "off"
  }
}
